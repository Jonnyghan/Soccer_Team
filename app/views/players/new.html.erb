<h1>Add a new Player</h1>

<p><%= @error %></p>

<form action="/players" method="post">
    <label> Name</label><br>
    <input type="text" name="name"><br>
    <label> Age</label><br>
    <input type="integer" name="age"><br>
    <label> Position</label> <br>
    <input type="radio" name="position" value="Fwd"> Forward
    <input type="radio" name="position" value="Mid"> Midfielder
    <input type="radio" name="position" value="Def"> Defender
    <input type="radio" name="position" value="GK"> Goalie
    <br>

    <button type="submit"> Add Player</button>
</form>